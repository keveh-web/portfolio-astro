<header class="w-full border-b border-neutral-800 bg-neutral-950/80 backdrop-blur">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
    <!-- Logo -->
    <a href="/" class="text-xl font-bold tracking-tight text-white">
      Kevin<span class="text-blue-400">.dev</span>
    </a>

    <!-- Nav -->
    <nav class="flex items-center gap-3">
      <a href="/" class="ui-btn">
        <span class="ui-btn__text">Inicio</span>
      </a>

      <a href="/proyectos" class="ui-btn">
        <span class="ui-btn__text">Proyectos</span>
      </a>

      <a href="/contacto" class="ui-btn">
        <span class="ui-btn__text">Contacto</span>
      </a>
    </nav>
  </div>

  <style>
    /* Botón: Tailwind + CSS mínimo para el efecto de "chitchat" */
    .ui-btn {
      box-sizing: border-box;

      display: inline-flex;
      align-items: center;
      justify-content: center;

      padding: 15px 20px;

      background: rgb(41, 41, 41);
      color: #fff;

      font-weight: 600;
      font-size: 16px;
      font-family: Menlo, Roboto Mono, monospace;

      border: none;
      cursor: pointer;
      overflow: hidden;

      transition: 0.3s;
      box-shadow: 0 2px 10px 0 rgba(0, 0, 0, 0.137);
      border-radius: 10px;
    }

    .ui-btn__text {
      position: relative;
      letter-spacing: 0.1rem;
      transition: 0.3s;
      background: inherit;
    }

    .ui-btn__text::before {
      position: absolute;
      content: "";
      background: inherit;
      box-sizing: border-box;
      right: 0;
      top: 0;
    }

    .ui-btn:hover,
    .ui-btn:focus {
      background: rgb(51, 51, 51);
      outline: none;
    }

    .ui-btn:hover .ui-btn__text,
    .ui-btn:focus .ui-btn__text {
      color: #fac921;
    }

    .ui-btn:hover .ui-btn__text::before,
    .ui-btn:focus .ui-btn__text::before {
      animation: chitchat linear both 1.2s;
    }

    @keyframes chitchat {
      0% { content: "#"; }
      5% { content: "."; }
      10% { content: "^{"; }
      15% { content: "-!"; }
      20% { content: "#$_"; }
      25% { content: "№:0"; }
      30% { content: "#{+."; }
      35% { content: "@}-?"; }
      40% { content: "?{4@%"; }
      45% { content: "=.,^!"; }
      50% { content: "?2@%"; }
      55% { content: "\\;1}]"; }
      60% { content: "?{%:%"; right: 0; }
      65% { content: "|{f[4"; right: 0; }
      70% { content: "{4%0%"; right: 0; }
      75% { content: "'1_0<"; right: 0; }
      80% { content: "{0%"; right: 0; }
      85% { content: "]>'"; right: 0; }
      90% { content: "4"; right: 0; }
      95% { content: "2"; right: 0; }
      100% { content: ""; right: 0; }
    }

    /* Responsive: en móvil apilar / simplificar */
    @media (max-width: 640px) {
      .ui-btn {
        padding: 12px 14px;
        font-size: 14px;
        border-radius: 9px;
      }
      .ui-btn__text {
        letter-spacing: 0.06rem;
      }
    }
  </style>
</header>
