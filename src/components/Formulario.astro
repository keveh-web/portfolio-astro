---
import { Icon } from "astro-icon/components";
---

<section id="contact" class="py-24">
  <div class="max-w-7xl mx-auto px-8">

    <!-- Header -->
    <div class="text-center mb-16">
      <p class="text-gray-500 uppercase tracking-wide text-sm mb-4">Get in touch</p>
      <h2 class="text-4xl md:text-5xl font-bold mb-4">Contact Me</h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Have a project in mind? Let&apos;s work together to create something amazing.
      </p>
    </div>

    <!-- Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">

      <!-- Left: Info -->
      <div>
        <h3 class="text-2xl font-bold mb-6">Let&apos;s talk about everything!</h3>
        <p class="text-gray-600 leading-relaxed mb-10 max-w-xl">
          Feel free to reach out if you want to collaborate on a project, have a question,
          or just want to connect.
        </p>

        <div class="space-y-6">

          <!-- Email -->
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-xl bg-gray-100 flex items-center justify-center">
              <Icon name="lucide:mail" class="w-6 h-6 text-gray-700" />
            </div>
            <div>
              <p class="text-sm text-gray-500">Email</p>
              <p class="font-medium text-gray-900">kevin@tucorreo.com</p>
            </div>
          </div>

          <!-- Phone -->
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-xl bg-gray-100 flex items-center justify-center">
              <Icon name="lucide:phone" class="w-6 h-6 text-gray-700" />
            </div>
            <div>
              <p class="text-sm text-gray-500">Phone</p>
              <p class="font-medium text-gray-900">+34 600 000 000</p>
            </div>
          </div>

          <!-- Location -->
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-xl bg-gray-100 flex items-center justify-center">
              <Icon name="lucide:map-pin" class="w-6 h-6 text-gray-700" />
            </div>
            <div>
              <p class="text-sm text-gray-500">Location</p>
              <p class="font-medium text-gray-900">Las Palmas, Gran Canaria</p>
            </div>
          </div>

        </div>
      </div>

      <!-- Right: Form -->
      <form
        class="bg-white rounded-2xl border border-gray-200 shadow-sm p-8"
        method="post"
        action="#"
      >
        <div class="space-y-6">

          <!-- Name -->
          <div>
            <label for="name" class="block text-sm font-medium text-gray-900 mb-2">
              Name <span class="text-red-500">*</span>
            </label>
            <input
              id="name"
              name="name"
              type="text"
              required
              placeholder="Your name"
              class="w-full rounded-xl border border-gray-300 px-4 py-3 outline-none focus:ring-2 focus:ring-black/20 focus:border-gray-400"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-900 mb-2">
              Email <span class="text-red-500">*</span>
            </label>
            <input
              id="email"
              name="email"
              type="email"
              required
              placeholder="your@email.com"
              class="w-full rounded-xl border border-gray-300 px-4 py-3 outline-none focus:ring-2 focus:ring-black/20 focus:border-gray-400"
            />
          </div>

          <!-- Subject -->
          <div>
            <label for="subject" class="block text-sm font-medium text-gray-900 mb-2">
              Subject <span class="text-red-500">*</span>
            </label>
            <input
              id="subject"
              name="subject"
              type="text"
              required
              placeholder="How can I help you?"
              class="w-full rounded-xl border border-gray-300 px-4 py-3 outline-none focus:ring-2 focus:ring-black/20 focus:border-gray-400"
            />
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block text-sm font-medium text-gray-900 mb-2">
              Message <span class="text-red-500">*</span>
            </label>
            <textarea
              id="message"
              name="message"
              required
              rows="6"
              placeholder="Your message..."
              class="w-full rounded-xl border border-gray-300 px-4 py-3 outline-none focus:ring-2 focus:ring-black/20 focus:border-gray-400 resize-none"
            ></textarea>
          </div>

          <!-- Button -->
          <button
            type="submit"
            class="w-full inline-flex items-center justify-center gap-3 bg-black text-white px-6 py-4 rounded-xl hover:bg-gray-800 transition"
          >
            Send Message
            <Icon name="lucide:send" class="w-5 h-5" />
          </button>

        </div>
      </form>

    </div>
  </div>
</section>
