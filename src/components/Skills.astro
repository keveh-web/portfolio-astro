---
import { Icon } from "astro-icon/components";
---

<section class="py-24">
  <div class="max-w-7xl mx-auto px-8 text-center">

    <!-- TÃ­tulo -->
    <p class="text-gray-500 uppercase tracking-wide text-sm mb-4">
      What I do
    </p>

    <h2 class="text-4xl md:text-5xl font-bold mb-6">
      Skills & Expertise
    </h2>

    <p class="text-gray-600 max-w-2xl mx-auto mb-16">
      I work with a wide range of technologies and tools to build modern web applications.
    </p>

    <!-- Grid de tarjetas -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 text-left">

      <!-- Frontend -->
      <div class="bg-gray-50 p-8 rounded-2xl shadow-sm hover:shadow-md hover:-translate-y-1 transition duration-300">
        <div class="flex items-center gap-4 mb-6">
          <Icon name="lucide:code-2" class="w-8 h-8 text-gray-700" />
          <h3 class="text-xl font-semibold">Frontend Development</h3>
        </div>

        <div class="flex flex-wrap gap-3">
          <span class="skill-tag">Astro</span>
          <span class="skill-tag">TypeScript</span>
          <span class="skill-tag">Next.js</span>
          <span class="skill-tag">Tailwind CSS</span>
          <span class="skill-tag">HTML/CSS</span>
        </div>
      </div>

      <!-- Backend -->
      <div class="bg-gray-50 p-8 rounded-2xl shadow-sm hover:shadow-md hover:-translate-y-1 transition duration-300">
        <div class="flex items-center gap-4 mb-6">
          <Icon name="lucide:server" class="w-8 h-8 text-gray-700" />
          <h3 class="text-xl font-semibold">Backend Development</h3>
        </div>

        <div class="flex flex-wrap gap-3">
          <span class="skill-tag">Node.js</span>
          <span class="skill-tag">REST APIs</span>
          <span class="skill-tag">Python</span>
        </div>
      </div>

      <!-- Database -->
      <div class="bg-gray-50 p-8 rounded-2xl shadow-sm hover:shadow-md hover:-translate-y-1 transition duration-300">
        <div class="flex items-center gap-4 mb-6">
          <Icon name="lucide:database" class="w-8 h-8 text-gray-700" />
          <h3 class="text-xl font-semibold">Database & Tools</h3>
        </div>

        <div class="flex flex-wrap gap-3">
          
            <span class="skill-tag">Git</span>
          <span class="skill-tag">Docker</span>
        </div>
      </div>

      <!-- Mobile -->
      <div class="bg-gray-50 p-8 rounded-2xl shadow-sm hover:shadow-md hover:-translate-y-1 transition duration-300">
        <div class="flex items-center gap-4 mb-6">
          <Icon name="lucide:smartphone" class="w-8 h-8 text-gray-700" />
          <h3 class="text-xl font-semibold">Mobile Development</h3>
        </div>

        <div class="flex flex-wrap gap-3">
          <span class="skill-tag">React Native</span>
          <span class="skill-tag">Responsive Design</span>
          <span class="skill-tag">Android</span>
        </div>
      </div>

      <!-- Design -->
      <div class="bg-gray-50 p-8 rounded-2xl shadow-sm hover:shadow-md hover:-translate-y-1 transition duration-300">
        <div class="flex items-center gap-4 mb-6">
          <Icon name="lucide:palette" class="w-8 h-8 text-gray-700" />
          <h3 class="text-xl font-semibold">Design</h3>
        </div>

        <div class="flex flex-wrap gap-3">
          <span class="skill-tag">UI/UX</span>
          <span class="skill-tag">Figma</span>
          <span class="skill-tag">Adobe XD</span>
          <span class="skill-tag">Prototyping</span>
        </div>
      </div>

      <!-- Other -->
      <div class="bg-gray-50 p-8 rounded-2xl shadow-sm hover:shadow-md hover:-translate-y-1 transition duration-300">
        <div class="flex items-center gap-4 mb-6">
          <Icon name="lucide:settings" class="w-8 h-8 text-gray-700" />
          <h3 class="text-xl font-semibold">Other Skills</h3>
        </div>

        <div class="flex flex-wrap gap-3">
          <span class="skill-tag">Testing</span>
          <span class="skill-tag">Problem Solving</span>
        </div>
      </div>

    </div>
  </div>
</section>
